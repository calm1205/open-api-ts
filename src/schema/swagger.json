{
  "info": {
    "title": "API title",
    "version": "0.0.1"
  },
  "swagger": "2.0",
  "produces": ["application/json"],
  "host": "example.org",
  "basePath": "/api",
  "paths": {
    "/v2/user": {
      "get": {
        "description": "user entityを全て取得",
        "responses": {
          "200": {
            "description": "get user",
            "schema": {
              "$ref": "#/definitions/userEntities"
            }
          },
          "404": {
            "description": "userが存在しない"
          }
        }
      },
      "post": {
        "description": "userの追加",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "userのリクエスト",
            "required": true,
            "schema": {
              "$ref": "#/definitions/userEntity"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "post user",
            "schema": {
              "$ref": "#/definitions/userEntity"
            }
          }
        }
      }
    },
    "/v2/user/{id}": {
      "get": {
        "description": "user(単体)の取得",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "user id",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "get user",
            "schema": {
              "$ref": "#/definitions/userEntity"
            }
          }
        }
      },
      "put": {
        "description": "userの更新",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "user id",
            "required": true,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "user",
            "in": "body",
            "description": "userのリクエスト",
            "required": true,
            "schema": {
              "$ref": "#/definitions/userEntity"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "put user",
            "schema": {
              "$ref": "#/definitions/userEntity"
            }
          }
        }
      },
      "delete": {
        "description": "userの削除",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "user id",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "delete user",
            "schema": {
              "$ref": "#/definitions/userEntity"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "userEntity": {
      "description": "user entity",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int32",
          "description": "userを一意に判定するid"
        },
        "name": {
          "type": "string",
          "description": "氏名"
        },
        "age": {
          "type": "integer",
          "format": "int32",
          "description": "年齢"
        },
        "domain": {
          "type": "string",
          "enum": ["tech", "sales", "cs"],
          "description": "所属部署"
        }
      }
    },
    "userEntities": {
      "description": "user entityの配列",
      "type": "array",
      "items": {
        "$ref": "#/definitions/userEntity"
      }
    }
  }
}
